{
  "manifest_version": 3,
  "name": "Focus-Booster",
  "version": "1.1",
  "description": "Boost your focus with motivational quotes, a Pomodoro timer, dark mode, and rewards!",
  "permissions": ["storage", "alarms", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
